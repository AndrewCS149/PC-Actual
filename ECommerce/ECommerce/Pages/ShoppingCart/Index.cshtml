    <style>
        main {
            margin-bottom: 150px;
        }

        .plus-minus {
            display: inline-flex;
        }

        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
    <title>Shopping Cart</title>
</head>
<body>
    <main id="products-main">
        @*<table class="table table-striped">
                <thead>
                    <tr>
