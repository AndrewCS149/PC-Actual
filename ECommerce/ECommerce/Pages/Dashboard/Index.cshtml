@page
@model ECommerce.Pages.Dashboard.DashboardModel
@{
    ViewData["Title"] = "Product";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .upload-form {
            margin: 0px auto;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-4 d-flex justify-content-center upload-form">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input class="form-control" asp-for="@Model.Name" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Image"></label>
                    <input class="form-control" type="file" asp-for="@Model.Image" />
                    <button type="submit" class="btn btn-primary btn-sm text-left">Upload Image</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>