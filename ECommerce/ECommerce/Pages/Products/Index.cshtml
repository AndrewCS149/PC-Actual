<body>
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-3">

                <h1 class="my-4">Shop Brand</h1>
                <div id="shop-by-list" class="list-group">
                    <form method="post">
                        <input hidden asp-for="@Model.Term" value="" />
                        <button class="list-group-item" asp-page="/Products/Index" type="submit">All</button>
                    </form>
                    <form method="post">
                        <input hidden asp-for="@Model.Term" value="ryzen" />
                        <button class="list-group-item" asp-page="/Products/Index" type="submit">Ryzen</button>
                    </form>
                    <form method="post">
                        <input hidden asp-for="@Model.Term" value="intel" />
                        <button class="list-group-item" asp-page="/Products/Index" type="submit">Intel</button>
                    </form>
                    <form method="post">
                        <input hidden asp-for="@Model.Term" value="asus" />
                        <button class="list-group-item" asp-page="/Products/Index" type="submit">Asus</button>
                    </form>
                </div>
            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row">
                    @{
                        foreach (var item in Model.Products)
                        {
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">
                                    <a href="#"><img class="card-img-top" src=@item.Image alt=""></a>
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="#">@item.Name</a>
                                        </h4>
                                        <h5>@string.Format("{0:C}", item.Price)</h5>
                                        <p class="card-text">@item.Description</p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">
                                            <a asp-page="ProductDetails" asp-route-id="@item.Id">Details</a>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <!-- /.row -->
            </div>
            <!-- /.col-lg-9 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</body>
</html>