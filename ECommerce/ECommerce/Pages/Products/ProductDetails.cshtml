@page
@model ECommerce.Pages.ProductDetailsModel
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>ProductDetails</title>
</head>
<body>
    <!--Main layout-->
    <main class="mt-5 pt-4">
        <div class="container dark-grey-text mt-5">

            <!--Grid row-->
            <div class="row wow fadeIn">

                <!--Grid column-->
                <div class="col-md-6 mb-4">

                    <img src=@Model.Product.Image class="img-fluid" alt="">
                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-6 mb-4">

                    <!--Content-->
                    <div class=".align-items-start p-4">

                        <div class="mb-3">
                            <h3>@Model.Product.Name</h3>
                        </div>
                        <p class="badge mr-1">Stock: @Model.Product.Stock</p>

                        <p class="lead">
                            <span>@string.Format("{0:C}", Model.Product.Price)</span>
                        </p>

                        <p class="lead font-weight-bold">Description</p>
                        <p>@Model.Product.Description</p>

                        <p class="lead font-weight-bold">Recommendation</p>
                        <p>@Model.Product.Recommendation</p>

                        <form method="post" class="d-flex justify-content-center">
                            <input type="hidden" value="@Model.Product.Id" name="productId" />
                            <button asp-page="/ShoppingCart/Index" type="submit" class="btn btn-primary btn-md my-0 p">Add To Cart<i class="fas fa-shopping-cart ml-1"></i></button>
                        </form>
                    </div>
                    <!--Content-->
                </div>
                <!--Grid column-->
            </div>
            <hr>
            <!--Grid row-->
            @await Component.InvokeAsync("ShoppingCart")
        </div>
    </main>
    <!--Main layout-->
</body>
</html>