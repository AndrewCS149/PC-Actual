@page
@model ECommerce.Pages.Account.Login.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .login {
            margin: 0px auto;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-4 d-flex justify-content-center login">
            <form method="post">
                <div class="form-group">
                    <div asp-validation-summary="All" class="error-message"></div>
                    <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" asp-for="@Model.Input.Email" />
                </div>
                <div class="form-group">
                    <input class="form-control" id="exampleInputPassword1" aria-describedby="passwordHelp" placeholder="Enter password" asp-for="@Model.Input.Password" />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</body>
</html>