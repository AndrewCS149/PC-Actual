@model ECommerce.Models.Cart
<!--Grid column-->
<div class="col-md-4 mb-4">

    <!-- Heading -->
    <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Your cart</span>
        @{
            if (Model != null)
            {
                int qty = 0;
                foreach (var item in Model.CartItem)
                    qty += item.Quantity;
                <span class="badge badge-secondary badge-pill">@qty</span>
            }
        }
    </h4>

    <!-- Cart -->
    <ul class="list-group mb-3 z-depth-1">
        @{
            if (Model != null)
            {

                foreach (var item in Model.CartItem)
                {
                    decimal itemTotal = item.Quantity * item.Product.Price;
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">
                                @item.Product.Name
                                <small class="text-muted">(@item.Quantity)</small>
                            </h6>
                        </div>
                        <span class="text-muted">@string.Format("{0:C}", itemTotal)</span>
                    </li>

                }
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total</span>
                    <strong>@string.Format("{0:C}", Model.Total)</strong>
                </li>
            }
        }
    </ul>
    <!-- Cart -->
</div>
<!--Grid column-->