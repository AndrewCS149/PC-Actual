@model List<ECommerce.Models.Products>

@{
    ViewData["Title"] = "Index";
    @*Layout = "_Layout";*@
}

<!DOCTYPE html>
<html>
<head>
    <title>Ecommerce</title>
</head>
<body>
    <header>
    </header>

    <main>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Calories</th>
                    <th>Protein</th>
                    <th>Fat</th>
                    <th>Carbohydrates</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Calories);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Protein);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fat);
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Carbo);
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</body>
</html>